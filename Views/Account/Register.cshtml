@{
    ViewData["Title"] = "Register";
}

@model Account

<form asp-action="Register" method="post">
    <div class="form-group">
        <input asp-for="Email" class="form-control" placeholder=" " autocomplete="off" />
        <label asp-for="Email" class="form-label"></label>
    </div>
    <div class="form-group">
        <input asp-for="Password" type="password" class="form-control" placeholder=" " />
        <label asp-for="Password" class="form-label"></label>
    </div>
    <div class="form-group">
        <input name="PasswordConfirmation" type="password" class="form-control" placeholder=" " />
        <label class="form-label">Confirm Password</label>
    </div>
    <button type="submit" class="btn btn-submit">Register</button>
</form>
